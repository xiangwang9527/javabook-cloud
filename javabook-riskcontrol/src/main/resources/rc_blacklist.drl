package rc_rules;

import cn.javabook.chapter05.entity.LoginEvent
import cn.javabook.chapter05.service.BlackListService
import cn.javabook.chapter05.service.EventService

global BlackListService blackListService
global EventService eventService

// 黑名单预警
rule "rc_blacklist"
    no-loop false
    lock-on-active true
    when
        $event : LoginEvent(level == 0);
    then
        if (blackListService.contain($event.getUsername())) {
            // 保存风险事件
            boolean flag = eventService.insertRiskEvent($event, "黑名单用户尝试登录");
            if (flag) {
                System.out.println("黑名单用户尝试登录");
            }
            delete($event);
        }
end
